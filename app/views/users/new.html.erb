<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%# form_withに差し替え %>
    <%# https://qiita.com/hmmrjn/items/24f3b8eade206ace17e2 %>
    <%# HTMLとしてsubmitするので、localを使う %>
    <%# https://qiita.com/sho_tsuchida1105/items/b08df35fe3c45f3756da %>
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%# 5.1なので、idは自分で付ける %>
      <%= f.text_field :name, id: "user_name", class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, id: "user_email", class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, id: "user_password", class: "form-control" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, id: "user_password_confirmation", class: "form-control" %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
